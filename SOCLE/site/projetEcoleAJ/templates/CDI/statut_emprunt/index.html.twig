{% extends 'base.html.twig' %}

{% block title %}Hello statutEmpruntController!{% endblock %}

{% block body %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>libelle</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for statutEmprunt in statutEmprunts %}
                <tr>
                    <td>{{statutEmprunt.id}}</td>
                    <td>{{ statutEmprunt.libelle }}</td>
                    <td>
                        <a href="{{ path('statutEmprunt_affichage', {'id': statutEmprunt.id}) }}" class="btn btn-secondary">lire</a>
                        <a href="{{ path('statutEmprunt_edition', {'id': statutEmprunt.id}) }}" class="btn btn-secondary">editer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('statutEmprunt_nouveau') }}" class="btn" >Creer Nouveau statutEmprunt</a>
{% endblock %}
