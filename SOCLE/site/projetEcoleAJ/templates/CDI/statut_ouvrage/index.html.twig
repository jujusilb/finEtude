{% extends 'base.html.twig' %}

{% block title %}Hello statutOuvrageController!{% endblock %}

{% block body %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>libelle</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for statutOuvrage in statutOuvrages %}
                <tr>
                    <td>{{statutOuvrage.id}}</td>
                    <td>{{ statutOuvrage.libelle }}</td>
                    <td>
                        <a href="{{ path('statutOuvrage_affichage', {'id': statutOuvrage.id}) }}" class="btn btn-secondary">lire</a>
                        <a href="{{ path('statutOuvrage_edition', {'id': statutOuvrage.id}) }}" class="btn btn-secondary">editer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('statutOuvrage_nouveau') }}" class="btn" >Creer Nouveau statutOuvrage</a>
{% endblock %}
