{% extends 'base.html.twig' %}

{% block title %}Matiere
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Matiere</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ emprunt.id }}</td>
				</tr>
				<tr>
					<th>date de l'emprunt</th>
					<td>{{ emprunt.dateEmprunt | date ('d/m/Y') }}</td>
				</tr>
					<th>Membre</th>
					<td>
						<a href="{{ path('membre_affichage', {'id': emprunt.membre.id}) }}">
							{{emprunt.membre.prenom}} {{emprunt.membre.nom}}
						</a>
					</td>
				</tr>
				<tr>
					<th>Ouvrage</th>
					<td>
						<a href="{{ path('ouvrage_affichage', {'id': emprunt.ouvrage.id}) }}">
							{{emprunt.ouvrage.titre}}
						</a>
					</td>
				</tr>
				<tr>
					<th>Statut</th>
					<td>{{emprunt.statut}}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('emprunt_index') }}" class="btn btn-secondary">Liste de sieges</a>
		<a href="{{ path('emprunt_edition', {'id': emprunt.id}) }}" class="btn btn-secondary">Modifier</a>

		{{ include('CDI/emprunt/_delete_form.html.twig') }}
	</div>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>

{% endblock %}
