{% extends 'base.html.twig' %}

{% block title %}Matiere
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Secretariat</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ messageForum.id }}</td>
				</tr>
				<tr>
					<th>Expediteur</th>
					<td>{% if messageForum.expediteur | length > 0%}
						<a href="{{ path('membre_affichage', {'id': messageForum.expediteur.id}) }}">
							{{messageForum.expediteur.prenom}} {{ messageForum.expediteur.nom}}
						</a>
						{% endif %}
					</td>
				</tr>
					<th>Sujet</th>
					<td>{{ messageForum.sujet}}</td>
				</tr>
				<tr>
					<th>Contenu</th>
					<td>{{ messageForum.contenu }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('messageForum_index') }}" class="btn btn-secondary">Liste de sieges</a>

		<a href="{{ path('messageForum_edition', {'id': messageForum.id}) }}" class="btn btn-secondary">Modifier</a>
		{{ include('communication/message_forum/_delete_form.html.twig') }}
	</div>
{% endblock %}
