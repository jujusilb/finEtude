{% extends 'base.html.twig' %}

{% block title %}Hello messageForumController!{% endblock %}

{% block body %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Expediateur</th>
                <th>Sujet</th>
                <th>Contenu</th>
               <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for messageForum in messageForums %}
                <tr>
                    <td>{{messageForum.id}}</td>
                    <td>
                        <a href="{{ path('membre_affichage', {'id': messageForum.expediteur.id}) }}">
                            {{ messageForum.expediteur.prenom }} {{ messageForum.expediteur.nom }}
                        </a>
                    </td>
                    <td>{{ messageForum.sujet }}</td>
                    <td>{{ messageForum.contenu }}</td>
                    <td>
                        <a href="{{ path('messageForum_affichage', {'id': messageForum.id}) }}" class="btn btn-secondary">lire</a>
                        <a href="{{ path('messageForum_edition', {'id': messageForum.id}) }}" class="btn btn-secondary">editer</a>
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('messageForum_nouveau') }}" class="btn" >Creer Nouveau messageForum</a>
{% endblock %}
