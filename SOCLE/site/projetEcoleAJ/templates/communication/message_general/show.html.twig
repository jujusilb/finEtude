{% extends 'base.html.twig' %}

{% block title %}Matiere
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Secretariat</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ messageGeneral.id }}</td>
				</tr>
				<tr>
					<th>Expediteur</th>
					<td>{% if messageGeneral.expediteur | length > 0%}
						<a href="{{ path('membre_affichage', {'id': messageGeneral.expediteur.id}) }}">
							{{messageGeneral.expediteur.prenom}} {{ messageGeneral.expediteur.nom}}
						</a>
						{% endif %}
					</td>
				</tr>
				<tr>
					<td>Destinataire</td>
					<td>
						{% if messageGeneral.destinataire | length > 0%}
						<a href="{{ path('membre_affichage', {'id': messageGeneral.destinataire.id}) }}">
							{{messageGeneral.destinataire.prenom}} {{ messageGeneral.destinataire.nom}}
						</a>
						{% endif %}
					</td>
				<tr>
					<th>Sujet</th>
					<td>{{ messageGeneral.sujet}}</td>
				</tr>
				<tr>
					<th>Contenu</th>
					<td>{{ messageGeneral.contenu }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('messageGeneral_index') }}" class="btn btn-secondary">Liste de sieges</a>

		<a href="{{ path('messageGeneral_edition', {'id': messageGeneral.id}) }}" class="btn btn-secondary">Modifier</a>
		{{ include('communication/message_general/_delete_form.html.twig') }}
	</div>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>

{% endblock %}
