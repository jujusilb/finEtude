{% extends 'base.html.twig' %}

{% block title %}Hello messageGeneralController!{% endblock %}

{% block body %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Expediateur</th>
                <th>Sujet</th>
                <th>Contenu</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for messageGeneral in messageGenerals %}
                <tr>
                    <td>{{messageGeneral.id}}</td>
                    <td>
                        {% if messageGeneral.expediteur is not null %}
                            <strong>Exp√©diteur :</strong> 
                            <a href="{{ path('membre_affichage', {'id': messageGeneral.expediteur.id}) }}">
                                {{ messageGeneral.expediteur.prenom }} {{ messageGeneral.expediteur.nom }}
                            </a>
                        {% else %}
                            <strong>Requerant :</strong> {{ messageGeneral.requerant }}
                        {% endif %}
                    </td>
                    <td>{{ messageGeneral.sujet }}</td>
                    <td>{{ messageGeneral.contenu }}</td>
                    <td>
                        <a href="{{ path('messageGeneral_affichage', {'id': messageGeneral.id}) }}" class="btn btn-secondary">lire</a>
                        <a href="{{ path('messageGeneral_edition', {'id': messageGeneral.id}) }}" class="btn btn-secondary">editer</a>
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('messageGeneral_nouveau') }}" class="btn" >Creer Nouveau messageGeneral</a>
{% endblock %}
