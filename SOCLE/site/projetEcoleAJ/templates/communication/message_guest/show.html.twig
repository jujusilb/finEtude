{% extends 'base.html.twig' %}

{% block title %}Matiere
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Secretariat</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ messageGuest.id }}</td>
				</tr>
				<tr>
					<th>Auteur</th>
					<td>{% if messageGuest.auteur | length > 0%}
						<a href="{{ path('membre_affichage', {'id': messageGuest.expediteur.id}) }}">
							{{messageGuest.auteur.prenom}} {{ messageGuest.expediteur.nom}}
						</a>
						{% endif %}
					</td>
				</tr>
				<tr>
					<td>Destinataire</td>
					<td>
						{% if messageGuest.destinataire | length > 0%}
						<a href="{{ path('membre_affichage', {'id': messageGuest.destinataire.id}) }}">
							{{messageGuest.destinataire.prenom}} {{ messageGuest.destinataire.nom}}
						</a>
						{% endif %}
					</td>
				<tr>
					<th>Sujet</th>
					<td>{{ messageGuest.sujet}}</td>
				</tr>
				<tr>
					<th>Contenu</th>
					<td>{{ messageGuest.contenu }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('messageGuest_index') }}" class="btn btn-secondary">Liste de sieges</a>

		<a href="{{ path('messageGuest_edition', {'id': messageGuest.id}) }}" class="btn btn-secondary">Modifier</a>
		{{ include('communication/message_guest/_delete_form.html.twig') }}
	</div>


{% endblock %}
