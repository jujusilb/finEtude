{% extends 'base.html.twig' %}

{% block title %}Matiere
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Secretariat</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ messagePrive.id }}</td>
				</tr>
				<tr>
					<th>Expediteur</th>
					<td>{% if messagePrive.expediteur | length > 0%}
						<a href="{{ path('membre_affichage', {'id': messagePrive.expediteur.id}) }}">
							{{messagePrive.expediteur.prenom}} {{ messagePrive.expediteur.nom}}
						</a>
						{% endif %}
					</td>
				</tr>
				<tr>
					<td>Destinataire</td>
					<td>
						{% if messagePrive.destinataire | length > 0%}
						<a href="{{ path('membre_affichage', {'id': messagePrive.destinataire.id}) }}">
							{{messagePrive.destinataire.prenom}} {{ messagePrive.destinataire.nom}}
						</a>
						{% endif %}
					</td>
				<tr>
					<th>Sujet</th>
					<td>{{ messagePrive.sujet}}</td>
				</tr>
				<tr>
					<th>Contenu</th>
					<td>{{ messagePrive.contenu }}</td>
				</tr>
				<tr>
					<th>Privatif</th>
					<td>{{ messagePrive.privatif }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('messagePrive_index') }}" class="btn btn-secondary">Liste de sieges</a>

		<a href="{{ path('messagePrive_edition', {'id': messagePrive.id}) }}" class="btn btn-secondary">Modifier</a>
		{{ include('communication/message_prive/_delete_form.html.twig') }}
	</div>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>

{% endblock %}
