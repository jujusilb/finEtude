<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Sujet</th>
            <th>Contenu</th>
            <th>Destinataire</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for messagePriveEnvoye in messagePriveEnvoyes %}
            <tr>
                <td>{{messagePriveEnvoye.id}}</td>
                <td>
                    <a href="{{ path('membre_affichage', {'id': messagePriveEnvoye.destinataire.id}) }}">
                        {{ messagePriveEnvoye.destinataire.prenom }} {{ messagePriveEnvoye.destinataire.nom }}</td>
                    </a>
                </td>  
                <td>{{ messagePriveEnvoye.sujet }}</td>
                <td>{{ messagePriveEnvoye.contenu }}</td>
                <td>
                    <a href="{{ path('messagePrive_affichage', {'id': messagePriveEnvoye.id}) }}" class="btn btn-secondary">lire</a>
                    <a href="{{ path('messagePrive_edition', {'id': messagePriveEnvoye.id}) }}" class="btn btn-secondary">editer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>