{% extends 'base.html.twig' %}

{% block title %}Hello viandeController!{% endblock %}

{% block body %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>libelle</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for viande in viandes %}
                <tr>
                    <td>{{viande.id}}</td>
                    <td>{{ viande.libelle }}</td>
                    <td>
                        <a href="{{ path('viande_affichage', {'id': viande.id}) }}" class="btn btn-secondary">lire</a>
                        <a href="{{ path('viande_edition', {'id': viande.id}) }}" class="btn btn-secondary">editer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('viande_nouveau') }}" class="btn" >Creer Nouveau viande</a>
{% endblock %}
