{% extends 'base.html.twig' %}

{% block title %}Hello legumeController!{% endblock %}

{% block body %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>libelle</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for legume in legumes %}
                <tr>
                    <td>{{legume.id}}</td>
                    <td>{{ legume.libelle }}</td>
                    <td>
                        <a href="{{ path('legume_affichage', {'id': legume.id}) }}" class="btn btn-secondary">lire</a>
                        <a href="{{ path('legume_edition', {'id': legume.id}) }}" class="btn btn-secondary">editer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('legume_nouveau') }}" class="btn" >Creer Nouveau legume</a>
{% endblock %}
