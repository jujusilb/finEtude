{% extends 'base.html.twig' %}

{% block title %}Matiere
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Reservation Repas</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ reservationRepas.id }}</td>
				</tr>
				<tr>
					<th>Date d\'achat</th>
					<td>{{ reservationRepas.dateAchat | date('d/m/Y') }}</td>
				</tr>
				<tr>
					<th>Membre</th>
					<td>{{ reservationRepas.membre.prenom }} {{ reservationRepas.membre.nom }}</td>
				</tr>
				<tr>
					<th>repas</th>
					<td>
						<table class="table">
							<tr>
								<th>Date - Heure </th>
								<th>Menu</th>
								<th>Prix</th>
							</tr>
							<tr>
								<td>
									{{reservationRepas.repas.date |date('d/m/Y')}} - {{reservationRepas.repas.heure}}
								</td>
								<td>
									<li>{{reservationRepas.repas.menu.entree.libelle}}</li>
									<li>>{{reservationRepas.repas.menu.plat.viande.libelle}} - {{reservationRepas.repas.menu.plat.legume.libelle}}</li>
									<li>{{reservationRepas.repas.menu.fromage.libelle}}</li>
									<li>{{reservationRepas.repas.menu.dessert.libelle}}</li>
								</td>
								<td>{{reservationRepas.repas.prix}}</td>
							</tr>
						</table>
					</td>				
				</tr>
			</tbody>
		</table>

		<a href="{{ path('reservationRepas_index') }}" class="btn btn-secondary">Liste de sieges</a>
		<a href="{{ path('reservationRepas_edition', {'id': reservationRepas.id}) }}" class="btn btn-secondary">Modifier</a>
		{{ include('cantine/reservation_repas/_delete_form.html.twig') }}
		
	</div>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>

{% endblock %}
