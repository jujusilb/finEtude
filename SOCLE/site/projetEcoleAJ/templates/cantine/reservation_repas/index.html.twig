{% extends 'base.html.twig' %}

{% block title %}Hello reservationRepasController!{% endblock %}

{% block body %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>date d'achat</th>
                <th>Membre</th>
                <th>Repas</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for reservationRepas in reservationRepass %}
                <tr>
                    <td>{{reservationRepas.id}}</td>
                    <td>{{ reservationRepas.dateAchat | date('d/m/Y') }}</td>
                    <td>
                        <a href="{{path('membre_affichage', {'id': reservationRepas.membre.id})}}">
                            {{ reservationRepas.membre.prenom}} {{ reservationRepas.membre.nom}}
                        </a>
                    </td>
                    <td>
                        <a href="{{path('repas_affichage', {'id':reservationRepas.repas.id})}}">
                        {{ reservationRepas.repas.date | date('d/m/Y')}} {{ reservationRepas.repas.heure }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('reservationRepas_affichage', {'id': reservationRepas.id}) }}" class="btn btn-secondary">lire</a>
                        <a href="{{ path('reservationRepas_edition', {'id': reservationRepas.id}) }}" class="btn btn-secondary">editer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('reservationRepas_nouveau') }}" class="btn" >Creer Nouveau reservationRepas</a>
{% endblock %}
