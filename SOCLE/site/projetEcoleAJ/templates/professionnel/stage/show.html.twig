{% extends 'base.html.twig' %}

{% block title %}Stage
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Entree</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ stage.id }}</td>
				</tr>
				<tr>
					<th>Stagiaire</th>
