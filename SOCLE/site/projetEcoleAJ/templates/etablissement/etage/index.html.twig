{% extends 'base.html.twig' %}

{% block title %}Hello etageController!{% endblock %}

{% block body %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Batiment</th>
                <th>libelle</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for etage in etages %}
                <tr>
                    <td>{{etage.id}}</td>
                    <td>{{etage.batiment.libelle}}</td>
                    <td>{{ etage.libelle }}</td>
                    <td>
                        <a href="{{ path('etage_affichage', {'id': etage.id}) }}" class="btn btn-secondary">lire</a>
                        <a href="{{ path('etage_edition', {'id': etage.id}) }}" class="btn btn-secondary">editer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('etage_nouveau') }}" class="btn" >Creer Nouveau etage</a>
{% endblock %}
