{% extends 'base.html.twig' %}

{% block title %}Matiere
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Direction</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ direction.id }}</td>
				</tr>
				<tr>
					<th>photo</th>
					<td><img src="{{ vich_uploader_asset(direction, 'imageFile') }}" class="col-md-6 float-md-end mb-3 ms-md-3" style="width: 100px; height: 100px; object-fit: cover;" alt="..."></td>
				</tr>
								<tr>
					<th>Nom</th>
					<td>{{ direction.nom }}</td>
				</tr>
								<tr>
					<th>Prenom</th>
					<td>{{ direction.prenom }}</td>
				</tr>
								<tr>
					<th>email</th>
					<td>{{ direction.email }}</td>
				</tr>
								<tr>
					<th>Password</th>
					<td>{{ direction.password }}</td>
				</tr>
								<tr>
					<th>date d'embauche</th>
					<td>{{ direction.dateEmbauche | date('d/m/Y') }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('direction_index') }}" class="btn btn-secondary">Liste de directions</a>

		<a href="{{ path('direction_edition', {'id': direction.id}) }}" class="btn btn-secondary">Modifier</a>

		{{ include('utilisateur/direction/_delete_form.html.twig') }}
	</div>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>

{% endblock %}
