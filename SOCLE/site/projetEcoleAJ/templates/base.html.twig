<html>
{% include 'tools/page/head.html.twig' %}
 <body>
    {% include 'tools/page/header.html.twig' %}
     {% if app.user %}
        {% for role in app.user.roles %}
            {% if role == "ROLE_ELEVE"%}
                {% include 'tools/navigation/nav-eleve.html.twig' %}
