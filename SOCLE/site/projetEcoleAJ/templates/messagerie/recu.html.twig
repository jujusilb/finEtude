<table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Expediateur</th>
                <th>Destinataire</th>
                <th>Sujet</th>
                <th>Contenu</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for messageRecu in messageRecus %}
                <tr>
                    <td>{{messageRecu.id}}</td>
                    <td>
                        {% if messageRecu.expediteur is not null %}
                            <strong>Exp√©diteur :</strong> 
                            <a href="{{ path('membre_affichage', {'id': messageRecu.expediteur.id}) }}">
                                {{ messageRecu.expediteur.prenom }} {{ messageRecu.expediteur.nom }}
                            </a>
                        {% else %}
                            <strong>Requerant :</strong> {{ messageRecu.requerant }}
                        {% endif %}
                    </td>
                    <td>{{ messageRecu.sujet }}</td>
                    <td>{{ messageRecu.contenu }}</td>
                    <td>{{ messageRecu.privatif }}</td>
                    <td>
                        {% if messageRecu.destinataire | length > 0 %}
                            <a href="{{ path('membre_affichage', {'id': messageRecu.destinataire.id}) }}">
                                {{ messageRecu.destinataire.prenom }} {{ messageRecu.destinataire.nom }}</td>
                            </a>
                        {% endif %}
                    </td>                    
                    <td>
                        <a href="{{ path('message_affichage', {'id': messageRecu.id}) }}" class="btn btn-secondary">lire</a>
                        <a href="{{ path('message_edition', {'id': messageRecu.id}) }}" class="btn btn-secondary">editer</a>
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>