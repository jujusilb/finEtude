{% extends 'base.html.twig' %}

{% block title %}Thread
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Thread</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				{#<tr>
					<th>Id</th>
					<td>{{ subForum.id }}</td>
				</tr>#}
				<tr>
					<th>Libelle</th>
					<td>{{ subForum.libelle }}</td>
				</tr>
				<tr>
					<th>Déscription</th>
					<td>{{ subForum.description }}</td>
				</tr>
				<tr>
					<table class="table">
						<tr>
							{#<th>Id</th>#}
							<th>Libelle</th>
							<th>Déscription</th>
						</tr>
						{% for thread in subForum.threads %}
							<tr>
								{#<td>{{ thread.id }}</td>#}
								
								<td>
									<a href="{{ path('thread_affichage', {'id': thread.id}) }}">
										{{ thread.libelle }}
									</a>
								</td>
								<td>{{ thread.description}}<td>
								<td> par : {{thread.createur.prenom }} {{thread.createur.nom }}</td>
							</tr>
						{% endfor %}
					</table>
					<tr>
			</tbody>
		</table>

		<a href="{{ path('subForum_index') }}" class="btn btn-secondary">Liste de sieges</a>

		<a href="{{ path('subForum_edition', {'id': subForum.id}) }}" class="btn btn-secondary">Modifier</a>

		{{ include('forum/sub_forum/_delete_form.html.twig') }}
	</div>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>

{% endblock %}
