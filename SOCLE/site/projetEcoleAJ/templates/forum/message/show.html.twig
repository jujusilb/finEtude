{% extends 'base.html.twig' %}

{% block title %}Matiere
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Secretariat</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ message.id }}</td>
				</tr>
				<tr>
					<th>Expediteur</th>
					<td>{% if message.expediteur | length > 0%}
						<a href="{{ path('membre_affichage', {'id': message.expediteur.id}) }}">
							{{message.expediteur.prenom}} {{ message.expediteur.nom}}
						</a>
						{% endif %}
					</td>
				</tr>
				<tr>
					<td>Destinataire</td>
					<td>
						{% if message.destinataire | length > 0%}
						<a href="{{ path('membre_affichage', {'id': message.destinataire.id}) }}">
							{{message.destinataire.prenom}} {{ message.destinataire.nom}}
						</a>
						{% endif %}
					</td>
				<tr>
					<th>Sujet</th>
					<td>{{ message.sujet}}</td>
				</tr>
				<tr>
					<th>Contenu</th>
					<td>{{ message.contenu }}</td>
				</tr>
				<tr>
					<th>Privatif</th>
					<td>{{ message.privatif }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('message_index') }}" class="btn btn-secondary">Liste de sieges</a>

		<a href="{{ path('message_edition', {'id': message.id}) }}" class="btn btn-secondary">Modifier</a>
		{{ include('forum/message/_delete_form.html.twig') }}
	</div>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>

{% endblock %}
