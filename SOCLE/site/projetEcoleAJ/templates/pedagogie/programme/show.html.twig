{% extends 'base.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}

	<div class="container">

		<h5>Programme {{ programme.id }}</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Libelle</th>
					<td>{{ programme.titre }}</td>
				</tr>
				<tr>
					<th>Categorie</th>
					<td>{{ programme.categorie }}</td>
				</tr>
			</tr>
			</tbody>
		</table>

		<a href="{{ path('programme_index') }}" class="btn btn-secondary">Liste de programme</a>

		<a href="{{ path('programme_edition', {'id': programme.id}) }}" class="btn btn-secondary">Modifier</a>

		{{ include('pedagogie/programme/_delete_form.html.twig') }}
	</div>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>

{% endblock %}
