{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Libelle</th>
                <th>Contenu</th>
                <th>Promotion</th>
                <th>Professeur</th>
                <th>Matiere</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for exercice in exercices %}
                <tr>
                    <td>{{exercice.id}}</td>
                    <td>{{ exercice.date |date('d/m/Y') }}</td>
                    <td>{{ exercice.libelle }}</td>
                    <td>{{ exercice.contenu }}</td>
                    <td>{{ exercice.promotion.libelle }}</td>
                    <td> {{ exercice.professeur.prenom }} {{ exercice.professeur.nom }}
                    <td>{{ exercice.matiere.libelle }}</td>
                    
                    <td>
                        <a href="{{ path('exercice_affichage', {'id': exercice.id}) }}" class="btn btn-secondary">lire</a>
                        <a href="{{ path('exercice_edition', {'id': exercice.id}) }}" class="btn btn-secondary">editer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('exercice_nouveau') }}" class="btn" >Creer Nouvel admin</a>
{% endblock %}
