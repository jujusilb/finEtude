{% extends 'base.html.twig' %}

{% block title %}Matiere
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Promotion {{ promotion.id }}</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Libelle</th>
					<td>{{ promotion.libelle}}</td>
				</tr>
				<tr>

				</tr>
				<tr>
					<th>Eleves</th>
					<td>
						{% for eleve in promotion.eleves %}
							<li>
								<a href="{{ path('eleve_affichage', {'id': eleve.id}) }}">
									{{eleve.prenom}} {{eleve.nom}}
								</a>
							</li>
						{% endfor %}
					</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('promotion_index') }}" class="btn btn-secondary">Liste de promotions</a>

		<a href="{{ path('promotion_edition', {'id': promotion.id}) }}" class="btn btn-secondary">Modifier</a>

		{{ include('pedagogie/promotion/_delete_form.html.twig') }}
	</div>
{% endblock %}
