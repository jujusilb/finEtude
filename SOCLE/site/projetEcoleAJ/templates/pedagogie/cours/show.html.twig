{% extends 'base.html.twig' %}

{% block title %}Cours
{% endblock %}

{% block body %}

	<div class="container">

		<h5>Cours</h5>
		<hr style="width:100%; height:5px; background-color:#1B4F72 ">

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ cours.id }}</td>
				</tr>
				<tr>
					<th>Libelle</th>
					<td>{{ cours.libelle }}</td>
				</tr>
				<tr>
					<th>Cours</th>
					<td>
						<object type="text/html" codetype="application/pdf" name="PDF" id="PDF" data="{{asset('uploads/'~ cours.fichier)}}" height="600px" width="75%"/></object>
					</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('cours_index') }}" class="btn btn-secondary">Liste des cours</a>
		<a href="{{ path('cours_edition', {'id': cours.id}) }}" class="btn btn-secondary">Modifier</a>

		{{ include('pedagogie/cours/_delete_form.html.twig') }}
	</div>
	<br>
