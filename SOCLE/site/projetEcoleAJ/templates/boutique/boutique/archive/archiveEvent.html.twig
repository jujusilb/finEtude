<table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date de cr√©ation</th>
                <th>libelle</th>
                <th>description</th>
                <th>Date event</th>
                <th>prix</th>
                <th>stock</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.id}}</td>
                    <td>{{ event.createdAt | date('d/m/Y')}}
                    <td>{{ event.libelle }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.date_event | date('d/m/Y') }}</td>
                    <td>{{ event.prix }}</td>
                    <td>{{ event.stock }}</td>  
                    <td>
                        <a href="{{ path('event_affichage', {'id': event.id}) }}" class="btn btn-secondary">lire</a>
                        <a href="{{ path('event_edition', {'id': event.id}) }}" class="btn btn-secondary">editer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>